.content {
  height: 100vh;
  background-color: #fff;
  padding: 0rpx 100rpx;
}
.reg-t {
  text-align: center;
  padding: 50rpx 0;
}
.reg-logo {
  width: 180rpx;
  height: 180rpx;
  border-radius: 20rpx;
  background-color: #f8f8f8;
  /* margin: 0 auto; */
}
.reg-m {
  margin-bottom: 100rpx;
}
.reg-item {
  border-bottom: 2rpx solid #d0d0d0;
  overflow: hidden;
  padding: 10rpx;
  color: #333;
  margin-bottom: 30rpx;
}
.reg-item .btn {
    border: none;
    width: 40%;
    text-align: right;
}
.reg-item .btn.btn-b {
      background: none;
      color: #333 !important;
}
.reg-item-input {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
}
.reg-b .btn {
  color: #999;
}
.registered-item {
  overflow: hidden;
  width: 100%;
}
.registered {
  float: right;
}
.btn-square {
  color: #333;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0;
  font-size: 24rpx;
}

